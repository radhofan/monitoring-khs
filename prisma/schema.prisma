generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  bidang    String
  subBidang String?
  passwordHash String
}

model Vendor {
  key                String   @id @default(uuid())
  namaVendor         String
  nilaiKeseluruhan   Float
  evaluasiVendor     Float
  totalProyek        Int
  suratPeringatan    String?
  suratPeringatanDetail Json? 
  kontraks           Kontrak[]
}

model Kontrak {
  key                       String   @id @default(uuid())
  namaPekerjaan             String
  subBidang                 String
  tipePekerjaan             String
  direksiPekerjaan          String
  pengawasPekerjaan         String
  vendorKey                 String
  vendorKHS                 String
  nilaiTotal                Float
  nomorKontrak              String
  nomorAmandemenKontrak     String?
  amandemenKontrakDetail    Json? 
  tanggalMulai              DateTime
  tanggalSelesai            DateTime
  terminPembayaran          String
  infoStatusPembayaran      String
  dataStatusPembayaran      Json  
  infoEvaluasi              String
  vendor                    Vendor @relation(fields: [vendorKey], references: [key])
}
